@model EAutoServicing.Models.ServiceBooking
@{
    ViewBag.Title = "Edit";
    //var Costumer = ViewBag.costumer;
}
<style>
    .glyphicon {
        font-size: 20px;
        opacity: 0.1;
    }

        .glyphicon:hover {
            opacity: 1;
        }
</style>
@*<h3>Editing Booking for @Costumer.Costumer.Name</h3>*@
<h3>Edit booking</h3>
<br />
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        @Html.HiddenFor(x => x.CostumerId)
        <div class="form-group">
            @Html.LabelFor(x => x.VehicleNumber, new { @class = "col-md-3 control-label" })
            <div class="col-md-4">
                @Html.TextBoxFor(x => x.VehicleNumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.VehicleNumber)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.ServicedBy, new { @class = "col-md-3 control-label" })
            <div class="col-md-4">
                @Html.DropDownList("ServicedBy", null, "Assign Mechanic", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.ServicedDate, new { @class = "col-md-3 control-label" })
            <div class="col-md-4">
                @Html.TextBoxFor(x => x.ServicedDate, new { @class = "form-control datepicker" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.NextServiceDate, new { @class = "col-md-3 control-label" })
            <div class="col-md-4">
                @Html.TextBoxFor(x => x.NextServiceDate, new { @class = "form-control datepicker" })
            </div>
        </div>

    </div>
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
}