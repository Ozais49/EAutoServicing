@model EAutoServicing.Models.AppUser
@{
    ViewBag.Title = "Create";
}

<h3>Create</h3>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(x => x.UserName, new { @class = "control-label col-md-2 " })
            <div class=" col-md-10">
                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
              
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Password, new { @class = "  col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Password)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.UserRoleId, new { @class = " col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownList("UserRoleId", null, "--Select Role---", new { @class = "form-control" })
               
            </div>

        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </div>
    </div>
   



}




